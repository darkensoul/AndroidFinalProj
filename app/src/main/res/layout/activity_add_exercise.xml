<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brittany.hcd.add_exercise"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_row="3"
        android:layout_column="4"
        android:background="#2ca5ee"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">


        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Exercises for the "
            android:id="@+id/text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#2ca5ee"
            android:textSize="14pt"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:paddingTop="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowSpan="2"
            android:paddingLeft="40dp" />

        <TextView
            android:textSize="14pt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:textColor="#ffffff"
            android:text="Default"
            android:id="@+id/User_input_exercise"
            android:layout_row="2"
            android:layout_column="1"
            android:paddingLeft="65dp" />

        <TextView
            android:textSize="14pt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:textColor="#ffffff"
            android:text="Routine"
            android:id="@+id/textview1"
            android:layout_row="3"
            android:layout_column="1"
            android:paddingLeft="75dp" />

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"

        android:background="#922eb5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:id="@+id/name"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_name"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"

        android:background="#922eb5">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Reps:"
            android:id="@+id/total_reps"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_width="113dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_reps"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="-10dp" />

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"

        android:background="#922eb5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            android:id="@+id/Duration"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_duration"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp" />

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:layout_column="2"
        android:background="#2ca5ee"
        android:paddingTop="20dp"
    android:paddingLeft="20dp">

<Button
android:layout_width="130dp"
android:layout_height="wrap_content"
android:text="Save"
android:textSize="12pt"

android:id="@+id/Save"
android:layout_row="0"
android:layout_column="0"
android:layout_marginLeft="90dp"
android:layout_marginBottom="20dp"
android:onClick="Exercise_entered" />
    </GridLayout>
    </LinearLayout>
