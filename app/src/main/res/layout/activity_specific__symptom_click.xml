<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brittany.hcd.Specific_Symptom_click"
    android:orientation="vertical" >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_row="3"
        android:layout_column="4"
        android:background="#40b953"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview of "
            android:id="@+id/entry_title"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:text="'Symptom Entry'"
            android:id="@+id/symptom_title"
            android:layout_row="0"
            android:layout_column="3"
            android:textAlignment="center"
            android:paddingTop="10dp"
            />


    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="4"

        android:background="#8983db"
        android:layout_weight="0.06">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/edit_symptomName"
            android:layout_row="0"
            android:src="@drawable/edit_workout"
            android:layout_column="0"
            android:onClick="edit_symptom"
            android:background="@null"
            android:scaleType="fitCenter"
            android:paddingTop="10dp" />
        <TextView
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:id="@+id/name"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"/>

        <EditText
            android:layout_width="340dp"
            android:layout_height="57dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edit_name"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp" />
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:background="#6db7ff"
        android:stretchColumns="*">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/edit_painLevel"
            android:layout_row="1"
            android:src="@drawable/edit_workout"
            android:layout_column="0"
            android:onClick="edit_symptom"
            android:background="@null"
            android:scaleType="fitCenter"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/pain_view"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="end"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:text="Pain Level:"
            android:id="@+id/Pain_level"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/seekBar"
            android:layout_row="4"
            android:textColor="#ffffff"
            android:layout_column="0"
            android:max="10"
            android:layout_columnSpan="2" />


    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:background="#ef98ff">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/edit_symptomDuration"
            android:layout_row="1"
            android:src="@drawable/edit_workout"
            android:layout_column="0"
            android:onClick="edit_symptom"
            android:background="@null"
            android:scaleType="fitCenter"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            android:id="@+id/duration"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:paddingTop="10dp"/>

        <EditText
            android:layout_width="231dp"
            android:layout_height="57dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edit_duration"
            android:layout_gravity="end"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

    </GridLayout>

    <!--FIX THIS LAYOUT THEN UPDATE OBJECTS ON CHANGE ACTIVITY-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#711e8a"
