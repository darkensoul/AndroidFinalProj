<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id ="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2ca5ee"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brittany.hcd.heart_rate_display"
    android:orientation="vertical"
    android:background="#2ca5ee"
    android:id="@+id/lay">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Rate Monitor"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18pt"
        android:textColor="#ffffff"
        />
    <Button android:text="Connect"
        android:id="@+id/ButtonConnect"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"></Button>

    <Button android:text="Disconnect"
        android:id="@+id/ButtonDisconnect"
        android:layout_toRightOf="@id/ButtonConnect"
        android:layout_alignTop="@id/ButtonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"></Button>

    <TextView
        android:id="@+id/labelHeartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:layout_below="@+id/ButtonConnect"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:textColor="#9438b0"
        android:layout_marginRight="40dp"></TextView>

    <TextView
        android:id = "@+id/HRTextBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ButtonConnect"
        android:text="Heart Rate"
        android:textSize = "24dp"
        android:textColor="#ffffff"/>
    <TextView
        android:id = "@+id/RespirationRate"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelHeartRate"
        android:text="Respiration Rate"
        android:textSize = "24dp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/labelRespRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:layout_below="@+id/labelHeartRate"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:textColor="#9438b0"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"></TextView>



    <TextView
        android:id = "@+id/StatusTextBox"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelRespRate"
        android:text="Status Message"
        android:textSize = "20dp"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/labelStatusMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status Message Box"
        android:layout_below="@+id/StatusTextBox"
        android:layout_alignParentLeft="true"
        android:textSize="20dp"
        android:textColor="#9438b0"></TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:id="@+id/linechart"
        android:layout_below="@+id/labelStatusMsg"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="30dp">

    </LinearLayout>

</RelativeLayout>
</ScrollView>