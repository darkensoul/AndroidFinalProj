<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brittany.hcd.NewSymptom"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_row="3"
        android:layout_column="4"
        android:background="#40b953"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Symptom for "
            android:id="@+id/text_symptom"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:text="'date'"
            android:id="@+id/date"
            android:layout_row="0"
            android:layout_column="3" />


    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="4"

        android:background="#8983db"
        android:layout_weight="0.06">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:id="@+id/name"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="284dp"
            android:layout_height="57dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edit_name"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp" />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="4"

        android:background="#6db7ff"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pain Level:"
            android:id="@+id/Pain_level"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/pain_view"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal|top" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:id="@+id/seekBar"
            android:layout_row="2"
            android:textColor="#ffffff"
            android:layout_column="0"
            android:max="10"/>


    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"

        android:background="#ef98ff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            android:id="@+id/duration"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/edit_duration"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"

        android:background="#711e8a"
        android:layout_weight="0.59"
        android:layout_marginTop="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:id="@+id/Description"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/edit_description"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/Save"
            android:onClick="save_symptom"
            android:layout_row="2"
            android:layout_column="2"/>

    </GridLayout>


</LinearLayout>
