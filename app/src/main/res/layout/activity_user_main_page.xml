<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.brittany.hcd.UserMainPage"
    android:orientation="vertical"
    android:layout_marginTop="0dp">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:columnCount="3"
        android:rowCount="2"
        android:background="#abd437"
        android:layout_gravity="top"
        android:id="@+id/gridLayout">

    <TextView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="  Welcome"
        android:textSize="14pt"
        android:id="@+id/Welcome"

        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_row="1"
        android:layout_column="1"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:textColor="#ffffff"
            android:textSize="14pt"
            android:id="@+id/username_text"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="top" />

    </GridLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Symptoms"
        android:id="@+id/Symptoms"
        android:layout_weight="0.15"
        android:background="#40b953"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:paddingLeft="-140dp"
        android:onClick="Symptoms_clicked"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <Button

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Workout"
        android:id="@+id/Workout"
        android:background="#1caeff"
        android:layout_weight="0.15"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:paddingLeft="-90dp"
        android:onClick="Workout_clicked"/>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Food"
        android:id="@+id/Food"
        android:layout_weight="0.15"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:background="#6372a4"
        android:paddingLeft="-70dp"
        android:onClick="Food_diary_clicked"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Reports"
        android:id="@+id/Reports"
        android:layout_weight="0.15"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:paddingLeft="30dp"
        android:nestedScrollingEnabled="true"
        android:background="#242283"
        android:onClick="Report_clicked"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/Logout"
        android:layout_weight="0.15"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:paddingLeft="-200dp"
        android:background="#c560d2"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:onClick="Logout_clicked"/>

</LinearLayout>
