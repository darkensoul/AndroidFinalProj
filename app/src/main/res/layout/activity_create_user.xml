<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brittany.hcd.NewSymptom"
    android:orientation="vertical">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_row="3"
        android:layout_column="4"
        android:background="#40b953"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create User"
            android:id="@+id/textsymptom"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:layout_marginLeft="130dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:textColor="#ffffff"
            android:text="Use the form belows to create a new user"
            android:id="@+id/date"
            android:layout_row="1"
            android:layout_column="1" />


    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="4"

        android:background="#8983db"
        android:layout_weight="0.06">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:id="@+id/name_textview"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="234dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/name"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp" />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="4"

        android:background="#6db7ff"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/password_1textview"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="234dp"
            android:layout_height="57dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_1"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />


    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"

        android:background="#ef98ff">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/password_2textview"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="12pt"
            android:textColor="#ffffff"
            android:layout_gravity="top"
            android:textAlignment="center"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="234dp"
            android:layout_height="57dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_2"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#ffffff"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2"

        android:background="#40b953"
        android:layout_weight="0.59"
        android:layout_marginTop="5dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create User"
            android:id="@+id/action_button"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="90dp"
            android:onClick="Create_user_clicked"/>

    </GridLayout>


</LinearLayout>
