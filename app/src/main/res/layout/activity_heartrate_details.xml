<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.brittany.hcd.User_add_exercise"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_row="1"
        android:layout_column="1"
        android:background="#ff3d30"
        android:paddingTop="20dp"
       >


        <TextView

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Heart Rate Details"
            android:id="@+id/text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18pt"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:paddingTop="0dp"
            android:layout_row="0"
            android:layout_column="0"

            android:paddingLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="-5dp" />



    </GridLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Heart Rate Information"
            android:id="@+id/Heart_info"
            android:textSize="10pt"
            android:textColor="#ffffff"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="Heartrate_info_click"
            android:background="#3db5a2"
            android:layout_marginTop="5dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Heart Rate Monitor"
        android:id="@+id/Heart_calculate"
        android:textSize="10pt"
        android:textColor="#ffffff"
        android:layout_row="0"
        android:layout_column="1"
        android:onClick="Heartrate_calculate_click"
        android:background="#3db5a2"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/blank"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff3d30"
        android:textSize="12pt"
        android:textColor="#ffffff"
        android:paddingLeft="0dp"
        android:layout_weight="0.53"
        android:layout_marginTop="5dp" />
</LinearLayout>
