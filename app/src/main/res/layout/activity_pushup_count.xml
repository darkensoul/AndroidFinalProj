<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brittany.hcd.Pushup_count"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#2ca5ee">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push-Up Counter"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18pt"
        android:textColor="#ffffff"
        android:layout_marginLeft="40dp" />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:text="   Keep Going!"
        android:id="@+id/textView_encourage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14pt"
        android:textColor="#9438b0"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_marginTop="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal: "
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15pt"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="#ffffff"
        android:layout_marginLeft="50dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20pt"
        android:ems="10"
        android:id="@+id/editText_reach"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:layout_column="2"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="10dp"
        android:textColor="#9438b0"/>

    </GridLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:textSize="50pt"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_proximityView"
        android:layout_gravity="center_horizontal"

        android:layout_weight="0.21"
        android:layout_row="6"
        android:layout_column="2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done for the day!"
        android:id="@+id/button3"
        android:textSize="12pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:onClick="done_clicked"/>


</LinearLayout>
